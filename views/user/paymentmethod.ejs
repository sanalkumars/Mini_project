<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Payment Method - Sport Store</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/banner-bg.png');
            background-size: cover;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            /* display: flex; */
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin-left: 500px;
        }
       
        .card {
            width: 500px;
            background-color: #c7a43c;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 40px;
            border-radius: 10px;
           
        }

        .form-check {
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            background-color: #f9f9f9;
        }

        .form-check-label {
            font-size: 1.2em;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #ff9900;
            border: none;
        }

        .btn-primary:hover {
            background-color: #e68a00;
        }
        h1{
            font-family: sans-serif;
            font-weight: bolder;
            padding-left: 30px;
            text-align: center;
        }
        .mar{
            margin-left: 20px;
        }
        #continueBtn a{
            text-decoration: none;
        }
        a{
            font-size: 25px;
        }
    </style>
</head>

<body>

    <%- include("../partials/header.ejs") %>

 
    <div class="container mt-5">
        <h1 class="mb-4">Select Payment Method</h1>

        <div class="card mx-auto">
           
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentOption" id="UPI" value="UPI">
                <label class="form-check-label mar"  for="upi">
                    UPI
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentOption" id="Credit/Debit-Card" value="Credit/Debit-Card">
                <label class="form-check-label mar" for="card">
                    Credit/Debit Card
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentOption" id="Net-Banking" value="Net-Banking">
                <label class="form-check-label mar" for="netBanking">
                    Net Banking
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentOption" id="Cash-on-Delivery" value="Cash-on-Delivery">
                <label class="form-check-label mar" for="cod">
                    Cash on Delivery
                </label>
            </div>


 
             
              <input type="hidden" id="selectedPaymentMethod" name="paymentMethod" value="">

              <!-- Modify the Continue button to trigger the payment processing -->
              <a href="/ordersucess"><button type="button" class="btn btn-primary">Continue</button> </a>

              

        </div>
       
    </div>

    

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

     
        
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    document.getElementById('continueBtn').addEventListener('click', async function () {
        const selectedOption = document.querySelector('input[name="paymentOption"]:checked');
        const updatedTprice = document.getElementById('updatedTprice').value;

        if (selectedOption) {
            console.log(selectedOption);
            const paymentOption = selectedOption.value;

            const response = await fetch('/makePayment', {

                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ paymentOption, updatedTprice }),
            });

            if (selectedOption) {
                // Redirect to the confirm page
                window.location.href = '/confirm';
            } else {
                alert('Error processing payment. Please try again laterrrrr.');
            }
        } else {
            alert('Please select a payment option');
        }
    });
});

    </script>

</body>

</html>