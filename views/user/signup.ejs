                                <p class="alert alert-danger" role="alert" id="validationMessage"> <%=locals.msg%></p>
                                    <!-- Validation message will appear here dynamically -->
                               
                                <form class="mx-1 mx-md-4" method="post" action="/signup" onsubmit="return validateForm()" novalidate>
