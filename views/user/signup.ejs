<script>
    function validateForm() {
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('cpassword').value;

        if (!isValidName(name)) {
            return false;
        }

        if (!isValidEmail(email)) {
            return false;
        }

        if (!isValidPassword(password)) {
            return false;
        }

        if (!isValidConfirmPassword(password, confirmPassword)) {
            return false;
        }

        // All validations passed, allow form submission
        return true;
    }

    function isValidName(name) {
        if (name.trim() === '') {
            displayErrorMessage('Please enter your name.');
            return false;
        }
        return true;
    }

    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            displayErrorMessage('Please enter a valid email address.');
            return false;
        }
        return true;
    }

    function isValidPassword(password) {
        if (password.trim() === '') {
            displayErrorMessage('Please enter a password.');
            return false;
        } else if (password.length < 8) {
            displayErrorMessage('Password must be at least 8 characters.');
            return false;
        } else {
            return true;
        }
    }

    function isValidConfirmPassword(password, confirmPassword) {
        if (password !== confirmPassword) {
            displayErrorMessage('Passwords do not match.');
            return false;
        }
        return true;
    }

    function displayErrorMessage(message) {
        // Display the error message in the alert
        document.getElementById('validationMessage').innerHTML = message;
        // You can also use SweetAlert or other methods to show a more styled message here
        // For simplicity, I'm just updating the alert text in this example
    }
</script>





