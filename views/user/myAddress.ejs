<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Address</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/banner-bg.png');
            background-size: cover;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start; /* This will align content to the top */
            height: 100vh;
        }

        .header {
            /* Your header styles here */
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(5px);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 100%;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .address-container {
            max-height: 400px; /* Adjust the max height as per your preference */
            overflow-y: auto;
        }

        .address-card {
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
        }

        .button-container {
            text-align: center;
        }

        .btn {
            margin: 5px;
        }
    </style>
</head>

<body>
<%- include("../partials/header.ejs") %>

<div class="container mt-5">
    <h1>Addresses</h1>

    <div class="button-container">
        <a href="/addAddress" class="btn btn-success">Add New Address</a>
    </div>

    <!-- Add a div with a specific class for the address container -->
    <div class="address-container">
        <!-- Loop through the addresses and display them -->
        <% address.forEach((address) => { %>
            <div class="address-card">
                <strong>Name:</strong><%= address.name %><br>
                <strong>Street:</strong> <%= address.street %><br>
                <strong>City:</strong> <%= address.city %><br>
                <strong>State:</strong> <%= address.state %><br>
                <strong>Pin Code:</strong> <%= address.zip %><br>
                <div class="button-container">
                    <a href="/editAddress"><button class="btn btn-primary edit-address" data-id="">
                        <i class="fas fa-edit"></i> Edit Address
                    </button></a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
</body>
</html>
