<!-- addBanner.ejs -->

<%- include("../partials/adminHeader.ejs") %>
<!-- Sidebar End -->

<!-- Content Start -->
<div class="content">
  <%- include("../partials/adminNavbar.ejs") %>
  <!-- Navbar End -->

  <!-- Improved Styling -->
  <div class="container-fluid pt-4 px-4">
    <h1 class="text-center mb-4">Add New Banner</h1>
    <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
      <div class="col-md-6">
        <p id="error-message" style=" color: red;"></p>
        <form action="/admin/addBanner" method="post" enctype="multipart/form-data" novalidate>
          <!-- Customize the form fields based on your banner model -->
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
            <br>
          <div class="form-group">
            <label for="image">Image:</label>
            <input type="file" class="form-control-file" id="image" name="image" accept="image/*" required>
          </div>
             <br>
          <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="description" required></textarea>
          </div>
             <br>
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
  <!-- Improved Styling End -->

  <!--validation script -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var form = document.querySelector('form');
      var errorMessageElement = document.getElementById('error-message');
  
      form.addEventListener('submit', function (event) {
        // Reset previous error messages
        resetErrorMessages();
  
        // Validate Name
        var name = document.getElementById('name').value.trim();
        if (name === '') {
          displayErrorMessage('Please enter a name.');
          event.preventDefault();
          return false;
        }
  
        // Validate Image
        var image = document.getElementById('image').value.trim();
        if (image === '') {
          displayErrorMessage('Please select an image.');
          event.preventDefault();
          return false;
        }
  
        // Validate Description
        var description = document.getElementById('description').value.trim();
        if (description === '') {
          displayErrorMessage('Please enter a description.');
          event.preventDefault();
          return false;
        }
  
        // Allow form submission if validation passes
        return true;
      });
  
      function displayErrorMessage(message) {
        errorMessageElement.textContent = message;
      }
  
      function resetErrorMessages() {
        errorMessageElement.textContent = '';
      }
    });
  </script>
  
  <!--validation script -->


  <!-- Footer Start -->
  <%- include("../partials/adminfooter.ejs") %>
</div>
</body>

</html>
